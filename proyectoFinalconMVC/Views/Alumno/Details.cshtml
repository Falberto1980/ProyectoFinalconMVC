@model proyectoFinalconMVC.Models.Alumno

@{
    ViewData["Title"] = "Details";
}

<h1>Detalle</h1>

<div>
    <h4>Alumno</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.alias)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.alias)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nombreCompleto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombreCompleto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.dni)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.dni)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.mail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.mail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.edad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.edad)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.cursos)
        </dt>
        <dd class="col-sm-10">
            @Html.ListBoxFor(m => m.cursos, new MultiSelectList(Model.cursos, "id", "nombre", new List<SelectListItem>(), "categoria"),
             new
             {
                 @style = $"width:400px; height:{60 * Model.cursos.Count }px; padding:15px;",
                 @align = "left",
                 @disabled = "disabled"
             })
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.id">Editar</a> |
    <a asp-action="Index">Regresar a la lista</a>
</div>
